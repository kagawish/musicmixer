<%- include header %>
    <div>
        <div class="container">
            <table id="mytable" class="table table-bordred table-striped center-block" style="width:50%">
                <thead>
                <th >Song Name</th>
                <th class ="col-md-1">Delete</th>
                <th class ="col-md-1">Play</th>
                <th class ="col-md-1">Share</th>
                </thead>
                <tbody>

                <% for(var i=0; i<songs.length; i++) { %>
                <tr>
                    <td><%= songs[i]%></td>
                    <td><p title="Delete"><a href="/<%= songs[i]%>/delete" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a></p></td>
                    <td><p title="Play"><a href="/play/<%= songs[i]%>" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-play"></span></a></p></td>
                    <td><p title="Share"><a href="/<%= songs[i]%>/share" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-share"></span></a></p></td>
                </tr>
                <% } %>

                </tbody>
            </table>
            <div class="col-sm-6 col-sm-offset-3">
            <form action="/uploadFiles" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Song name</label>
                    <input type="text" class="form-control" name="songname" required>
                </div>
                <div class="form-group">
                    <input type="file" accept="audio/*" name="upl" multiple/>
                </div>
                <div class="form-group">
                     <input type="submit" value="Upload" class="btn btn-info" />
                </div>
            </form>
                <% if (message.length > 0) { %>
                <div class="col-sm-8 col-sm-offset-4 alert alert-danger"><%= message %></div>
                <% } %>
            </div>
        </div>
    </div>
<%- include footer %>
